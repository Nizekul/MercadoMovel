<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/clientesFragment">

    <fragment
        android:id="@+id/produtosFragment"
        android:name="com.example.mercadomovel.view.Produtos.CadastrarProdutosFragment"
        android:label="fragment_produtos"
        tools:layout="@layout/cadastro_produtos_fragment" >
        <action
            android:id="@+id/action_produtosFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_produtosFragment_to_clientesFragment"
            app:destination="@id/clientesFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientesFragment"
        android:name="com.example.mercadomovel.view.Clientes.ClientesFragment"
        android:label="fragment_clientes"
        tools:layout="@layout/fragment_clientes" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mercadomovel.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>